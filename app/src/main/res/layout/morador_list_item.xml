<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <org.familianascimento.rodrigo.contasdacasa.view.CircularParseImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="1dp"
        app:shadow="true"
        android:layout_margin="8dp"
        android:id="@+id/morador_item_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Morador"
        android:id="@+id/morador_item_nome"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/morador_item_image"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="data"
        android:id="@+id/morador_item_datas"
        android:layout_below="@+id/morador_item_nome"
        android:layout_toEndOf="@+id/morador_item_image"
        android:gravity="center_vertical" />

</RelativeLayout>