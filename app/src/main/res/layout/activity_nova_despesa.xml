<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.familianascimento.rodrigo.contasdacasa.NovaDespesa">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:hint="Nome"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/valorEditText"
        android:layout_below="@+id/nomeEditText"
        android:layout_alignParentStart="true"
        android:hint="Valor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/vencimentoEditText"
        android:layout_below="@+id/valorEditText"
        android:layout_alignParentStart="true"
        android:hint="Vencimento" />

</RelativeLayout>
